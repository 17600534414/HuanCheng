<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.huancheng.reader.ui.activity.sub.ManChannelActivity"
    android:orientation="vertical">

    <include layout="@layout/title_bar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <com.youth.banner.Banner
        android:id="@+id/banner_manchannel"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/gray_deep">
        <ImageView
            android:id="@+id/iv_manchannelbanner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>
    </com.youth.banner.Banner>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="现代都市"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            />
        <View
            android:layout_width="wrap_content"
            android:layout_height="11dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_man_urban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="看更多"
            android:textColor="@color/blue"
            android:textSize="9sp"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_man_urban"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="玄幻奇幻"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="5dp"
                    />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="11dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_man_fantasy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="看更多"
                    android:textColor="@color/blue"
                    android:textSize="9sp"
                    android:layout_marginRight="10dp"
                    />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_man_fantasy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="武侠仙侠"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="5dp"
                    />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="11dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_man_knigh_errant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="看更多"
                    android:textColor="@color/blue"
                    android:textSize="9sp"
                    android:layout_marginRight="10dp"
                    />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_man_knigh_errant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="历史军事"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            />
        <View
            android:layout_width="wrap_content"
            android:layout_height="11dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_man_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="看更多"
            android:textColor="@color/blue"
            android:textSize="9sp"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_man_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="科幻末世"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="5dp"
                    />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="11dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_man_novel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="看更多"
                    android:textColor="@color/blue"
                    android:textSize="9sp"
                    android:layout_marginRight="10dp"
                    />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_man_novel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="悬疑小说"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="5dp"
                    />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="11dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_man_suspense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="看更多"
                    android:textColor="@color/blue"
                    android:textSize="9sp"
                    android:layout_marginRight="10dp"
                    />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_man_suspense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="游戏竞技"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="5dp"
                    />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="11dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_man_game"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="看更多"
                    android:textColor="@color/blue"
                    android:textSize="9sp"
                    android:layout_marginRight="10dp"
                    />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_man_game"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
</LinearLayout>
    </ScrollView>
</LinearLayout>

