<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue">
        <TextView
            android:id="@+id/tv_left_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/vip_back"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="全选"
            />
        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="整理书架"
            />
        <TextView
            android:id="@+id/tv_right_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_code2"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="20dp"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="15sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/iv_book_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/book_book"
                        />
                    <TextView
                        android:id="@+id/tv_bookname_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="世界第"
                        android:textSize="11sp"
                        android:textColor="#191919"
                        android:layout_marginTop="5dp"
                        />
                    <TextView
                        android:id="@+id/tv_booktype_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="什么鬼"
                        android:textSize="9sp"
                        android:textColor="#66ab51"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_textview"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/iv_book_type_1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/book_push"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    />
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/iv_book_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/book_book"
                        />
                    <TextView
                        android:id="@+id/tv_bookname_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="世界第"
                        android:textSize="11sp"
                        android:textColor="#191919"
                        android:layout_marginTop="5dp"
                        />
                    <TextView
                        android:id="@+id/tv_booktype_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="什么鬼"
                        android:textSize="9sp"
                        android:textColor="#66ab51"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_textview"/>

                </LinearLayout>
                <ImageView
                    android:id="@+id/iv_book_type_2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/book_push"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    />
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/iv_book_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/book_book"
                        />
                    <TextView
                        android:id="@+id/tv_bookname_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="世界第"
                        android:textSize="11sp"
                        android:textColor="#191919"
                        android:layout_marginTop="5dp"
                        />
                    <TextView
                        android:id="@+id/tv_booktype_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="什么鬼"
                        android:textSize="9sp"
                        android:textColor="#66ab51"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_textview"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/iv_book_type_3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/book_push"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/iv_book_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/book_book"
                        />
                    <TextView
                        android:id="@+id/tv_bookname_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="世界第"
                        android:textSize="11sp"
                        android:textColor="#191919"
                        android:layout_marginTop="5dp"
                        />
                    <TextView
                        android:id="@+id/tv_booktype_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="什么鬼"
                        android:textSize="9sp"
                        android:textColor="#66ab51"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_textview"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/iv_book_type_4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/book_push"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    />
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/iv_book_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/book_book"
                        />
                    <TextView
                        android:id="@+id/tv_bookname_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="世界第"
                        android:textSize="11sp"
                        android:textColor="#191919"
                        android:layout_marginTop="5dp"
                        />
                    <TextView
                        android:id="@+id/tv_booktype_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="什么鬼"
                        android:textSize="9sp"
                        android:textColor="#66ab51"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_textview"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/iv_book_type_5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/book_push"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/iv_book_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/book_add"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>