<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.huancheng.reader.ui.activity.sub.OpinionActivity"
    android:orientation="vertical"
    android:background="@color/gray"
    >

    <include layout="@layout/title_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="请选择反馈类型"
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/red"
                android:text="(必选)"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:padding="10dp"
            android:layout_marginTop="10dp">
            <RadioGroup
                android:id="@+id/radioGroup_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal"
                >
                <RadioButton
                    android:id="@+id/rbtn_functional_abnormality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="功能异常"/>
                <RadioButton
                    android:id="@+id/rbtn_proposal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="建议"/>
                <RadioButton
                    android:id="@+id/rbtn_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="其他"/>
            </RadioGroup>



        </LinearLayout>
        <EditText
            android:id="@+id/et_describe"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:background="@drawable/bg_text"
            android:hint="请详细描述您的问题"
            android:maxLength="100"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:gravity="top"
            />

        <EditText
            android:id="@+id/et_time"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:background="@drawable/bg_text"
            android:hint="出现问题的时间"
            android:maxLength="25"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="10dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="方便我们联系您，建议填写"
            android:textColor="@color/black"
            android:textSize="15sp"
            />
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:hint="请输入QQ/电话"
            android:background="@drawable/bg_text"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:paddingLeft="10dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:text="客服QQ:346216351"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"/>
    <Button
        android:id="@+id/btn_submission"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="提交"
        android:background="@drawable/btn_bg"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>


</LinearLayout>
