<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
  >
    <include layout="@layout/title_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RadioGroup
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/province_line_border"
            >
            <RadioButton

                android:id="@+id/tv_urban"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="现代都市"
                android:padding="10dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:background="@drawable/bg_text_selector"
                android:button="@null"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
            <RadioButton

                android:id="@+id/tv_fantasy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="玄幻奇幻"
                android:padding="10dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:button="@null"
                android:background="@drawable/bg_text_selector"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
            <RadioButton

                android:id="@+id/tv_knight_errant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="武侠仙侠"
                android:padding="10dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:background="@drawable/bg_text_selector"
                android:button="@null"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
            <RadioButton

                android:id="@+id/tv_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="历史军事"
                android:padding="10dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:background="@drawable/bg_text_selector"
                android:button="@null"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
            <RadioButton

                android:id="@+id/tv_novel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="科幻小说"
                android:padding="10dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:background="@drawable/bg_text_selector"
                android:button="@null"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
            <RadioButton

                android:id="@+id/tv_suspense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="灵异悬疑"
                android:padding="10dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:background="@drawable/bg_text_selector"
                android:button="@null"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
            <RadioButton

                android:id="@+id/tv_game"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="游戏竞技"
                android:padding="10dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:background="@drawable/bg_text_selector"
                android:button="@null"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
        </RadioGroup>
        <LinearLayout
            android:id="@+id/ll_content_man"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
